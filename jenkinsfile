pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                bat './gradlew build'
            }
        }
        stage('test'){
            steps {
                bat './gradlew test'
            }
        }
        stage('publish') {
            steps {
                bat './gradlew assemble -x sign'
                bat './gradlew bintrayUpload'
            }
        }
    }
}